{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Owlivion Mail",
  "version": "1.0.0",
  "identifier": "com.owlivion.mail",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Owlivion Mail",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "shortDescription": "Modern AI-powered email client",
    "longDescription": "Owlivion Mail - Hızlı, modern ve yapay zeka destekli e-posta istemcisi. Gmail, Outlook, Yahoo ve tüm IMAP e-posta sağlayıcılarıyla çalışır.",
    "category": "Utility"
  }
}
