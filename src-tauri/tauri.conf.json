{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Owlivion Mail",
  "version": "1.0.0",
  "identifier": "com.owlivion.mail",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Owlivion Mail",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; connect-src 'self' http://localhost:1420 ws://localhost:1420 https://generativelanguage.googleapis.com https://*.owlivion.com https://owlivion.com https://www.google.com https://fonts.googleapis.com https://fonts.gstatic.com; font-src 'self' data: https://fonts.gstatic.com; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "shortDescription": "Modern AI-powered email client",
    "longDescription": "Owlivion Mail - Hızlı, modern ve yapay zeka destekli e-posta istemcisi. Gmail, Outlook, Yahoo ve tüm IMAP e-posta sağlayıcılarıyla çalışır.",
    "homepage": "https://owlivion.com",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "desktopTemplate": "owlivion-mail.desktop",
        "section": "mail",
        "priority": "optional",
        "files": {
          "/usr/share/applications/owlivion-mail.desktop": "owlivion-mail.desktop"
        }
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    }
  }
}
